# ============================
# connect:seoul Server — Local Docker
# ============================

# 서버
NODE_ENV=development
PORT=3000

# 데이터베이스
DB_PATH=./data/way_game.sqlite

# JWT
JWT_SECRET=connectseoul_local_jwt_secret_2026
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=connectseoul_local_refresh_secret_2026
JWT_REFRESH_EXPIRES_IN=30d

# 세션
SESSION_SECRET=connectseoul_local_session_secret_2026

# CORS (iOS 시뮬레이터 + 로컬)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limit
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# 비밀번호 재설정 만료 (분)
PASSWORD_RESET_EXPIRY_MINUTES=30

# 로그
LOG_LEVEL=debug

# 시드 강제 실행 (true = DB 초기화 후 재시드)
RUN_SEED=false

# 어드민 패널
ADMIN_SECRET=connectseoul_admin_2026

